{
  "name": "@dvcol/web-extension-utils",
  "type": "module",
  "version": "2.3.0",
  "description": "Basic presets for stylelint",
  "homepage": "https://github.com/dvcol/web-extension-utils",
  "bugs": "https://github.com/dvcol/web-extension-utils/issues",
  "keywords": [
    "webexutils",
    "webex-utils",
    "web-extension-utils"
  ],
  "license": "MIT",
  "author": "dvcol",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/web-extension-utils.git"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">= 6.32.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./chrome": {
      "require": "./dist/chrome/index.cjs",
      "import": "./dist/chrome/index.js",
      "types": "./dist/chrome/index.d.ts"
    },
    "./common": {
      "require": "./dist/common/index.cjs",
      "import": "./dist/common/index.js",
      "types": "./dist/common/index.d.ts"
    },
    "./http": {
      "require": "./dist/http/index.cjs",
      "import": "./dist/http/index.js",
      "types": "./dist/http/index.d.ts"
    }
  },
  "files": [
    "*.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "tsup",
    "watch": "npm run build -- --watch lib",
    "lint": "eslint \"+(lib|scripts)/**\"",
    "lint:fix": "eslint \"+(lib|scripts)/**\" --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@dvcol/eslint-plugin-presets": "^1.1.1",
    "@types/chrome": "^0.0.224",
    "eslint": "^8.13.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "tsup": "^5.12.5 ",
    "typescript": "^4.6.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx"
      ]
    }
  }
}
